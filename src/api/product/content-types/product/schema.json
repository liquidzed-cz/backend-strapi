{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": false
    },
    "stock": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "loyaltyPoints": {
      "type": "integer",
      "required": true
    },
    "photos": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "averageRating": {
      "type": "decimal"
    },
    "numberOfRatings": {
      "type": "integer"
    }
  }
}
